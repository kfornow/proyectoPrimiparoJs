      <br><br>

     <div class="container">
        <br><br>
        <table  id="usuario" class="table table-bordered table-striped text-center mt-4" >
            <thead>
                <tr class=" bg-primary text-white">
                    <th scope="col" >id</th>
                    <th scope="col">nombre</th>
                    <th scope="col" >email</th>
                    <th scope="col">telefono</th>
                    <th scope="col">peticion</th>
                    <th scope="col"  >enfasis</th>
                    <th scope="col" >fecha</th>
                    <th scope="col" >hora</th>
                    <th scope="col" > acciones </th>
                </tr>

            </thead>

            <tbody>
                <%  results.forEach((user) =>{  %>
                  
                <tr>
                    <td> <%= user.id_mensaje  %> </td>
                    <td> <%=user.nombre %> </td>
                    <td> <%= user.email %>  </td>
                    <td> <%=user.telefono %> </td>
                    <td> <%=user.peticion %> </td>
                    <td>  <%=user.enfasis %> </td>
                    <td> <%=user.fecha %> </td>
                    <td><%=user.hora %> </td>
                    <td>
                     
                        
                        <a onclick=" confirmar(<%= user.id_mensaje %>) " class="btn btn-outline bg-danger text-white " id="delete"><i class="fa-solid fa-trash-can"></i></a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>


     </div>

     <script>
 

      function confirmar(id_mensaje){
        Swal.fire({
    title: 'Confirma la eliminacion del registro?',

    icon: 'warning',
    showCancelButton: true,
    confirmButtonColor: '#3085d6',
    cancelButtonColor: '#d33',
    confirmButtonText: 'Eliminar!'
    }).then((result) => {
      if (result.isConfirmed) {
        window.location ='/delete/'+id_mensaje;
      }
    })
      }
     </script>
     
     <script>
      var tabla=document.querySelector("#usuario");
      var dataTable = new DataTable(tabla);
     </script>
  


      
    

