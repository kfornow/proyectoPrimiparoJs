    <section class="page-section" id="contact">
      <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
          <div class="col-lg-8 col-xl-6 text-center">
            <h2 class="mt-0">Bandeja de conctacto</h2>
            <hr class="divider bg-black" />
          </div>
        </div>
        <div class="row gx-4 gx-lg-5 justify-content-center mb-5">
          <div class="col-lg-6">
            <form
              data-sb-form-api-token="API_TOKEN"
              action="/mensajes"
              method="POST"
            >
              <div class="form-floating mb-3">
                <input
                  class="form-control"
                  id="nombre"
                  name="nombre"
                  type="text"
                  placeholder="Ingrese su nombre completo..."
                  required
                />
                <label for="name">Nombre Completo</label>
              </div>

              <div class="form-floating mb-3">
                <input
                  class="form-control"
                  id="email"
                  name="email"
                  type="text"
                  placeholder="name@example.com"
                  required
                />
                <label for="email">Ingresa tu email</label>
              </div>

              <div class="form-floating mb-3">
                <input
                  class="form-control"
                  id="telefono"
                  name="telefono"
                  type="text"
                  placeholder="(123) 456-7890"
                  required
                />
                <label for="phone">Numero de telefono</label>
              </div>

              <div class="form-floating mb-3">
                <textarea
                  class="form-control"
                  id="peticion"
                  name="peticion"
                  type="text"
                  placeholder="Enter your message here..."
                  style="height: 10rem"
                  required
                ></textarea>
                <label for="message">Mensaje</label>
              </div>

              <div>
                <select name="enfasis" id="enfasis" required>
                  <option value="">Seleccione</option>
                  <% for (var count =0;count < results.length; count++){ %>
                  <option value="<%=results[count].enfasis %>">
                    <%=results[count].enfasis %>
                  </option>
                  <% } %>
                </select>
              </div>

              <div
                class="col-lg-18 align-self-baseline d-flex justify-content-center"
              >
                <button type="submit" class="bg-dark text-white">enviar</button>
              </div>
            </form>
          </div>
        </div>
        <div class="row gx-4 gx-lg-5 justify-content-center">
          <div class="col-lg-4 text-center mb-5 mb-lg-0">
            <i class="bi-phone fs-2 mb-3 text-muted"></i>
            <div>+57 (311) 856-8900</div>
          </div>
        </div>
      </div>
